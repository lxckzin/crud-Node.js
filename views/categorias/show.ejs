<h2>Categorias</h2>
<a href="/categorias/add" class="btn btn-success mb-3">Adicionar Categoria</a>
<table class="table">
  <thead><tr><th>ID</th><th>Nome</th><th>Ações</th></tr></thead>
  <tbody>
    <% categorias.forEach(c => { %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.nome %></td>
        <td>
          <a href="/categorias/edit/<%= c.id %>" class="btn btn-primary">Editar</a>
          <a href="/categorias/delete/<%= c.id %>" class="btn btn-danger">Excluir</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
