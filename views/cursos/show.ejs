<h2>Cursos</h2>
<h2>Lista de Cursos</h2>
<p>Exibição dos cursos cadastrados aqui.</p>

<a href="/cursos/add" class="btn btn-success mb-3">Adicionar Curso</a>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Professor Responsável</th>
    </tr>
  </thead>
  <tbody>
    <% cursos.forEach(curso => { %>
      <tr>
        <td><%= curso.id %></td>
        <td><%= curso.nome %></td>
        <td><%= curso.Professor ? curso.Professor.nome : "Sem professor" %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
